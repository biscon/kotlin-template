<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize">



    <TextView
        android:id="@+id/tvFindBirdSizeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="{findBird_sizeQuestionLong}"
        android:textColor="@color/color.dof.birdguide.black"
        android:textSize="18sp" />



    <TextView
        android:id="@+id/tvSelectedSizeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below = "@id/tvFindBirdSizeHeader"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="{findBird_size1Description}"
        android:textColor="@color/color.dof.birdguide.black"
        android:typeface="serif"
        android:textSize="26sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/llSizeImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvBird1"
                android:layout_width="26dp"
                android:layout_height="16dp"
                android:layout_gravity="left|bottom"
                android:src="@drawable/selector_birdsize_1"
                android:tint="@color/color.dof.birdguide.darkergrey" />

            <ImageView
                android:id="@+id/imvBird2"
                android:layout_width="39dp"
                android:layout_height="24dp"
                android:layout_weight="3"
                android:src="@drawable/selector_birdsize_2"
                android:tint="@color/color.dof.birdguide.darkergrey" />

            <ImageView
                android:id="@+id/imvBird3"
                android:layout_width="38dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:src="@drawable/selector_birdsize_3"
                android:tint="@color/color.dof.birdguide.darkergrey" />

            <ImageView
                android:id="@+id/imvBird4"
                android:layout_width="74dp"
                android:layout_height="78dp"
                android:layout_gravity="right|bottom"
                android:src="@drawable/selector_birdsize_4"
                android:tint="@color/color.dof.birdguide.darkergrey" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlSeekbar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/llSizeImages"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/slider_base"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@android:color/transparent"
                android:thumb="@drawable/size_selector_seekbar_thumb"
                android:thumbOffset="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlRulder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlSeekbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:background="@color/color.dof.birdguide.darkergrey"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@android:color/transparent"
                android:thumb="@drawable/size_selector_seekbar_thumb_rectangle"
                android:thumbOffset="16dp" />

            <ImageView
                android:id="@+id/imvRuler"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/slider_scale" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlRulder"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvFindBirdSmallSizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="{birdSize_smallLabel}"
                android:textColor="@color/color.dof.birdguide.darkergrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFindBirdMediumSizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="{birdSize_mediumLabel}"
                android:textColor="@color/color.dof.birdguide.darkergrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFindBirdBigSizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="{birdSize_bigLabel}"
                android:textColor="@color/color.dof.birdguide.darkergrey"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="141dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@color/color.dof.birdguide.white"
            android:text="{defaultSection_cancel}"
            android:textColor="@color/color.dof.birdguide.red"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnOK"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="141dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@color/color.dof.birdguide.pink"
            android:text="{defaultSection_ok}"
            android:textColor="@color/color.dof.birdguide.red"
            android:textSize="17sp" />
    </LinearLayout>
</RelativeLayout>
